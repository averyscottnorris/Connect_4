<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/connect3"

    tools:context="comaveryscottnorris.httpsgithub.team4sconnect4.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"

        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/connect3"


        />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"


        android:layout_alignStart="@+id/helpButton"
        android:layout_marginTop="45dp"

        android:text="ABOUT" />

    <Button
        android:id="@+id/highscoreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignBaseline="@+id/aboutButton"
        android:layout_alignBottom="@+id/aboutButton"
        android:layout_alignEnd="@+id/singlePlayer"
        android:layout_marginEnd="33dp"
        android:text="High Scores" />

    <Button
        android:id="@+id/helpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/aboutButton"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="76dp"
        android:text="HELP" />

    <Button
        android:id="@+id/singlePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single Player"



        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="51dp"
        android:layout_marginBottom="79dp" />


    <Button
        android:id="@+id/doublePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/singlePlayer"
        android:layout_alignBottom="@+id/singlePlayer"
        android:layout_alignEnd="@+id/helpButton"
        android:layout_marginEnd="28dp"
        android:text="Double Player" />


</RelativeLayout>
